<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Gymtracker" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/black</item>
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/bottom_nav_background</item>
        <item name="android:windowBackground">@color/background_primary</item>

        <!-- Text input styling -->
        <item name="textInputStyle">@style/Widget.GymTracker.TextInputLayout</item>

        <!-- Bottom sheet styling -->
        <item name="bottomSheetDialogTheme">@style/Theme.GymTracker.BottomSheet</item>
    </style>

    <style name="Theme.GymTracker.BottomSheet" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:colorBackground">@color/background_elevated</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.GymTracker.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">@dimen/spacing_md</item>
    </style>

    <!-- Text Input -->
    <style name="Widget.GymTracker.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/background_input</item>
        <item name="boxStrokeColor">@color/blue_primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.GymTracker.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Widget.GymTracker.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/background_elevated</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.GymTracker.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/background_elevated</item>
        <item name="colorSurface">@color/background_elevated</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.GymTracker.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_elevated</item>
        <item name="checkedIconEnabled">false</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
</resources>
